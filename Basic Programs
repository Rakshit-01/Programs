
1.Pallindrome Check Problem

#include<iostream>
using namespace std;
  
int main(){
    int  n,temp,rev=0,lastdigit;
    cin>>n;
    temp=n;
    while(n>0){
        lastdigit=n%10;
        rev=rev*10+lastdigit;
        n/=10;
        
    }
    if(temp==rev){
        cout<<"Pallindrome"<<endl;
    }
    else{
        cout<<"Not pallindrome"<<endl;
    }
    return 0;
}
